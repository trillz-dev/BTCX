<%- include('../includes/dashboard-header.ejs') %>


    <!--main content wrapper-->
    <div class="content-wrapper">

        <section class="main_setting">
            <div class="main_setting-container row">
                <div class="col-lg-4 col-sm-6">
                    <%- include('../includes/profile-summary.ejs') %>
                </div>
        
                <div class="col-lg-8 col-sm-6">
                    <div class="personal-setting">
                        <%- include('../includes/settings-nav.ejs') %>
        
                        <form method="post" action="/settings">
                            <div class="profile-form">
                                <div class="form-left">
                                    <div class="form-group profile_form-group">
                                        <label for="fname" class="text-label">First Name</label>
                                        <input type="text" name="fname" id="" class="profile-fname" required = "true" placeholder= <%= userFirst %>>
                                    </div>
                                    <div class="form-group profile_form-group">
                                        <label for="email" class="text-label">Email</label>
                                        <input type="text" name="email" id=""class="profile-email" disabled placeholder= <%= userEmail %>>
                                    </div>
                                    <!-- <div class="form-group profile_form-group">
                                        <label for="password">Password</label>
                                        <input type="password" name="" id="" class="profile-password">
                                    </div> -->
                                </div>
            
                                <div class="form-right">
                                    <div class="form-group profile_form-group">
                                        <label for="lname" class="text-label">Last Name</label>
                                        <input type="text" name="lname" id=""class="profile-lname" required = "true" placeholder= <%= userLast %>>
                                    </div>
                                    <div class="form-group profile_form-group">
                                        <label for="phone" class="text-label">Phone</label>
                                        <input type="text" name="phone" id="" class="profile-phone"  disabled  placeholder= <%= userNumber %>>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="profile-edit-btn btn btn-primary">Save Info</button>
                        </form>
                    </div>
                </div>
        
            </div>
        </section>

        <!--footer-->
        <%- include('../includes/dashboard-footer.ejs') %>
    </div>
    <!--/main content wrapper-->

    <!--right sidebar-->
    <%- include('../includes/dashboard-right-sidebar.ejs') %>

    <!--basic scripts-->
    <%- include('../includes/dashboard-script.ejs') %>

